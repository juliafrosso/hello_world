import math
print math.sqrt(25)

# import math + math. antes da função da raiz quadrada faz com que o Python "aprenda" matemática

from math import sqrt
from math import *
# importar * significa importar TUDO de math (isso torna desnecessário repetir math. antes de cada função, 
# MAS ATENÇÃO, isso por tornar as coisas muito confusas, melhor evitar)

-----------------------

# função: máximo

maximum = max(1,2,3,5,7,99,8777)

print maximum
# imprime o maior número

-----
# função: mínimo
minimum = min(-1,4,-5,3,46)

print minimum

-------
# função: absolute
# essa função mostra a distância do número inserido do zero (0)
absolute = abs(-42)

print absolute
# será impresso o número 42
# o número será sempre positivo pois se refere ao espaço/distância

---------
#função: type
#essa função mostra/retorna o tipo de dado inserido no argumento

print type(50)
# imprime 'int' (inteiro/integer)

print type(5.5)
# imprime 'float (número de ponto flutuante)

print type("it's a string, we know that")
# imprime 'str (string)

---------------
# essa divisão aceita float, os números irão aparecer inteiros (não seria possível dividir os cucumbers)
cucumbers = 100
num_people = 6

whole_cucumbers_per_person = cucumbers / num_people

-----
# adicionando . ao número de cucumbers a divisão passa a ser fracionada (é possível dividir os cucumbers)
cucumbers = 100.
num_people = 6

float_cucumbers_per_person = cucumbers / num_people

--------------------

skill_completed = "Python Syntax"

exercises_completed = 13
points_per_exercise = 5

point_total = 100

point_total = 100 + (exercises_completed * points_per_exercise)


print "I got " +  str(point_total)  + " points!"
# aqui se usa a função str(x) para transformar o valor da soma de pontos uma string e, consequentemente, conseguir imprimir tudo.
