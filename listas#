numbers = [5, 6, 7, 8]

print "Somando os numeros nos indices 0 e 2..."
print numbers[0] + numbers[2]
print "Somando os numeros nos indices 1 e 3..."
print numbers[1] + numbers[3]

# sempre lembrar que a contagem se inicia do zero (0)

-------

suitcase = ["oculos escuros", "chapeu", "passaporte", "laptop", "camisa", "sapatos"]
# [0,1,2,3,4,5]

first  = suitcase[0:2]  
# inicia a contagem no 0 e vai até 2, sem contar com o 2, então imprimi apenas até o 1

middle = suitcase[2:4]

last   = suitcase[4:6]

------------

animals = "catdogfrog"

cat  = animals[:3]  
# quando não adicionado nada no início considera-se "desde" [: = inicia do zero (0)
dog  = animals[3:6]              
frog = animals[6:]   
# quando não adicionado nada no final considera-se "até o fim" :] = termina noo último ítem 

----------

animals = ["tatu", "texugo", "pato", "emu", "raposa"]
duck_index = animals.index("pato")
#função que descobre qual a posição de duck


animals.insert(duck_index,"cobra")
# insere algo no lugar indicado dentro da lista, neste caso na posição de duck

-----------------------------------------

my_list = [1,9,3,8,5,7]

for number in my_list:
# isso traz todas as variáveis adicionar na lista
    print 2 * number
    # todas as variáveis da lista serão multiplicadas por 2
    
--------------------------
    
start_list = [5, 3, 1, 2, 4]
square_list = []
# square_list no momento encontra-se vazia

for number in start_list:
    square_list.append(number**2)
    #aqui se completa a square_list com a start_list ao quadrado
    # .append adiciona uma lista inteira

square_list.sort()
# .sort() coloca os valores da lista em ordem

print square_list
